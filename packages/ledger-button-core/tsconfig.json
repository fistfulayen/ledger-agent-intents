{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"rootDir": "src",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"types": ["node"],
		"strict": false,
		"noUncheckedIndexedAccess": false
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/**/__mocks__/**/*.ts"]
}
